{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "/*": ["./*"],
      "main/*": ["./src/main/*"],
      "~/*": ["./src/renderer/*"]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxtjs/axios",
      "nuxt-i18n",
      "@types/lodash-es",
      "**/*.d.ts",
      "@types/jest"
    ]
  },
  "exclude": ["node_modules"]
}
